<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme for dark mode. -->
    <!-- Inherit from Material3.Dark.NoActionBar for a full-screen Compose experience with Material 3 dark theme. -->
    <style name="Theme.MediaPowerhouse" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Material 3 color attributes -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">#FF121212</item> <!-- A darker surface for dark mode -->
        <item name="colorOnSurface">@color/white</item>
        <!-- Status bar color. Using colorPrimary for consistency with M3 common patterns. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Navigation bar color for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>